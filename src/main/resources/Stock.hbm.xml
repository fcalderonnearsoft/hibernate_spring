<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.hibernate.common.Stock" table="stock">
        <id name="stockId" type="int" column="STOCK_ID">
            <generator class="identity"/>
        </id>
        <property name="stockCode" column="STOCK_CODE" type="string"/>
        <property name="stockName" column="STOCK_NAME" type="string"/>

        <one-to-one name="proteinData" class="com.hibernate.common.ProteinData" cascade="save-update"/>
        <list name="stockHistoryList" table="stockhistory" inverse="true" cascade="save-update">
            <key column="STOCK_ID"/>
            <list-index column="POSITION"/>
            <one-to-many class="com.hibernate.common.StockHistory"/>
        </list>
    </class>
</hibernate-mapping>